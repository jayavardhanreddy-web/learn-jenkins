pipeline {
    agent{
        docker{
            image 'node:latest'
        }
    }

    stages {
        stage('Build') {
            
            
            steps {

            
                echo 'building the poject is working..'
                sh '''
                npm --version
                node --version
                npm ci
                npm run build
                ls -a

                '''
            
            }
        }
        stage('test'){
            
            steps{
                echo 'we are on the test stage'
                sh '''
                test -f build/index.html
                npm run test
                '''
            }
        }


    }
}
