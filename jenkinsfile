pipeline {
    agent any

    stages {
        stage('Build') {
            agent{
                docker{
                    image 'node:latest'
                }
            }
            steps {

            
                echo 'building the poject is working..'
                sh '''
                npm --version
                node --version
                npm ci
                npm run build
                ls -a

                '''
            
            }
        }
        stage('test'){
            steps{
                echo 'we are on the test stage'
                sh '''
                npm run test
                '''
            }
        }


    }
}
