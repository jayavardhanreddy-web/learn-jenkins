        stage('test') {
            agent {
                docker {
                    image 'node:latest'
                    reuseNode true
                }
            }
            steps {
                echo 'Running unit tests'
                sh 'npm test'
            }
        }

        
        stage('E2E') {
            agent {
                docker {
                    image 'mcr.microsoft.com/playwright:v1.39.0'
                    reuseNode true

                }
            }
            steps {
                echo 'We are on the E2E test stage'
                sh '''
                    npm install serve
                    node_modules/.bin/serve -s build &
                    sleep 30
                    npx playwright test
                '''
            }
        }
        stage('deploy'){
            agent{
                docker{
                    image 'node:latest'
                    reuseNode true
                }
            }
            steps{
                echo 'we are at deployment stage'
                sh '''
                npm install  netlify-cli
                node_modules/.bin/netlify --version

                '''
            }
        }
    }
    /*
    post {
        always {
            junit 'jest/test-results/junit.xml'
        }
    }*/
}
