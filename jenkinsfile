pipeline {
    agent any

    stages {
        /* ----------------- SKIPPED BUILD STAGE -----------------
        stage('Build') {
            agent {
                docker {
                    image 'node:latest'
                }
            }
            steps {
                echo 'Building the project...'
                sh '''
                    npm --version
                    node --version
                    npm ci
                    npm run build
                    ls -a
                '''
            }
        }
        */

        /* ----------------- E2E TEST STAGE ----------------- */
        stage('test'){
            agent{
                docker{
                    image 'node:latest'
                }
                steps{
                    echo 'running unit tests'
                    sh 'npm test'
                }
            }
        }
        stage('E2E') {
            agent {
                docker {
                    image 'mcr.microsoft.com/playwright:v1.39.0-noble'

                    
                }
            }
            steps {
                echo 'We are on the E2E test stage'
                sh '''
                    npm install serve
                    node_modules/.bin/serve -s build &
                    sleep 10
                    npx playwright test
                '''
            }
        }
    }

    post {
        always {
            junit 'jest/test-results/junit.xml'
        }
    }
}
