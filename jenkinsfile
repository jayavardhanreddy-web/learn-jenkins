pipeline {
    agent any

    stages {
        stage('Build') {
            agent{
                docker{
                    image 'node:latest'
                }
            }
            steps {

            
                echo 'building the poject is working..'
                sh '''
                npm --version
                node --version
                npm ci
                npm run build
                ls -a

                '''
            
            }
        }
    }
}
