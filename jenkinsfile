pipeline {
    agent any

    stages {
        /*
        stage('Build') {
            agent {
                docker {
                    image 'node:latest'
                }
            }
            steps {
                echo 'Building the project...'
                sh '''
                    npm --version
                    node --version
                    npm ci
                    npm run build
                    ls -a
                '''
            }
        }*/
        

        
        stage('test') {
            agent {
                docker {
                    image 'node:latest'
                }
            }
            steps {
                echo 'Running unit tests'
                sh 'npm test'
            }
        }

        /* ----------------- E2E TEST STAGE ----------------- */
        stage('E2E') {
            agent {
                docker {
                    docker pull mcr.microsoft.com/playwright:v1.39.0

                }
            }
            steps {
                echo 'We are on the E2E test stage'
                sh '''
                    npm install serve
                    node_modules/.bin/serve -s build &
                    sleep 30
                    npx playwright test
                '''
            }
        }
    }

    post {
        always {
            junit 'jest/test-results/junit.xml'
        }
    }
}
