pipeline {
    agent any
    environment{
        NETLIFY_SITE_ID = '7f9dc758-a649-4aa5-9910-21620314c4de'
        NETLIFY_AUTH_TOKEN = credentials('netlify-dash-token')

    }

    stages {
        
        stage('Build') {
            agent {
                docker {
                    image 'node:latest'
                    reuseNode true
                }
            }
            steps {
                echo 'Building the project...'
                sh '''
                    npm --version
                    node --version
                    npm ci
                    npm run build
                    ls -a
                '''
            }
        }
        

        
        stage('test') {
            agent {
                docker {
                    image 'node:latest'
                    reuseNode true
                }
            }
            steps {
                echo 'Running unit tests'
                sh 'npm test'
            }
        }

        
        stage('E2E') {
            agent {
                docker {
                    image 'mcr.microsoft.com/playwright:v1.39.0'
                    reuseNode true

                }
            }
            steps {
                echo 'We are on the E2E test stage'
                sh '''
                    npm install serve
                    node_modules/.bin/serve -s build &
                    sleep 30
                    npx playwright test
                '''
            }
        }
        stage('deploy staging'){
            agent{
                docker{
                    image 'node:latest'
                    reuseNode true
                }
            }
            steps{
                echo 'we are at deployment staging'
                sh '''
                
                npm install  netlify-cli
                npm install node-jq
                node_modules/.bin/netlify --version
                echo "deployment production site id : $NETLIFY_SITE_ID"

                node_modules/.bin/netlify status
                node_modules/.bin/netlify deploy --dir=build --json>deploy-output.json
                node_modules/.bin/node-jq '.deploy_url' deploy-output.json

                '''
            }
        }
        stage('Approval'){
            steps{
                timeout(time: 15, unit: 'MINUTES'){
                    input message: 'are you ready for deployment', ok: 'yes i am sure!'
               
                }
            
               
            }
            
        }
        stage('deploy to production'){
            agent{
                docker{
                    image 'node:latest'
                    reuseNode true
                }
            }
            steps{
                echo 'we are at deployment to production'
                sh '''
                
                npm install  netlify-cli
                node_modules/.bin/netlify --version
                echo "deployment production site id : $NETLIFY_SITE_ID"

                node_modules/.bin/netlify status
                node_modules/.bin/netlify deploy --dir=build --prod

                '''
            }
        }
        stage('prod e2e'){
            agent{
                docker{
                    image 'mcr.microsoft.com/playwright:v1.39.0'
                }
            }
            environment{
                CI_ENVIRONMENT_URL=' https://startling-unicorn-f2cbbb.netlify.app'
            }
            steps{
                echo 'at production testing stage'
                sh'''
                npm ci
                npx playwright test
                '''
            }
        }
    }
    post {
    always {
        junit 'jest-results/junit.xml'
    }
}

    
}
